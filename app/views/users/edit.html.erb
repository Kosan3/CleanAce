<h2>編集画面</h2><br>

<%= form_with model: @user, url: users_path, local: true do |f| %>
  <div class="form">
    <%= f.label :last_name, '姓' %>
    <%= f.text_field :last_name, autofocus: true %>
    <%= f.label :first_name, '名' %>
    <%= f.text_field :first_name %>
  </div>
  <div class="form">
    <%= f.label :kana_last_name, 'セイ' %>
    <%= f.text_field :kana_last_name %>
    <%= f.label :kana_first_name, 'メイ' %>
    <%= f.text_field :kana_first_name %>
  </div>
  <div class="form">
    <%= f.label :email, 'メールアドレス' %>
    <%= f.text_field :email %>
  </div>
  <div class="form">
    <%= f.label :postal_code, '郵便番号' %>
    <%= f.text_field :postal_code %>
  </div>
  <div class="form">
    <%= f.label :address, '住所' %>
    <%= f.text_field :address %>
  </div>
  <div class="form">
    <%= f.label :phone_number, '電話番号' %>
    <%= f.text_field :phone_number %>
  </div>
  <%= f.submit '変更する' %>
<% end %>