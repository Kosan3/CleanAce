<div class="row">
  <div class="col-12">
    <p>注文履歴一覧</p>
    <table class="table table-bordered cart-table">
      <thead>
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td><%= order.address %></td>
            <td>
              <% order.order_products.each do |op| %>
                <p><%= op.product.type.type_name %></p>
              <% end %>
            </td>
            <td><%= order.billing_total %></td>
            <td><%= link_to "詳細画面", order_path(order) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>