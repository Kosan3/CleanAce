      <% if signed_in? %>
        <%= link_to users_path, class: "side-link" do %><li><i class="fas fa-caret-right"></i> マイページ</li><% end %>
        <%= link_to orders_path, class: "side-link" do %><li><i class="fas fa-caret-right"></i> 注文履歴</li><% end %>
