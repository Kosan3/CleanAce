<div class="row">
  <%= render 'admin/shared/side' %>

  <div class="col-4 offset-1">
    <h4>注文情報</h4>
    <ul>
      <%= link_to admin_orders_path(page: 'today') do %>
        <li>本日の注文　<%= @orders.where(cancel: false).count %>件</li>
      <% end %>
    </ul>
    <br>
    <h4>キャンセル情報</h4>
    <ul>
      <%= link_to admin_orders_path(page: 'today', status: 'cancel') do %>
        <li>本日のキャンセル　<%= @orders.where(cancel: true).count %>件</li>
      <% end %>
    </ul>
  </div>
  <div class="col-4">
    <h4>メンバー募集情報</h4>
    <ul>
      <%= link_to admin_entries_path(page: 'today') do %>
        <li>本日の応募　<%= @entries.count %>件</li>
      <% end %>
    </ul>
  </div>
</div>
