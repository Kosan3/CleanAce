<div class="row">
  <div class="col-6">
    <%= form_with model: @product, url: admin_product_path, local: true do |f| %>
      <div class="form">
        <%= f.label :product_name, '商品名' %><br>
        <%= f.text_field :product_name %>
      </div>

      <div class="form">
        <%= f.label :introduction, '商品説明' %><br>
        <%= f.text_area :introduction %>
      </div>

      <div class="form">
        <%= f.label :image, '写真' %><br>
        <%= f.attachment_field :image %>
      </div>
      <br>
      <div class="submit">
        <%= f.submit '変更' %>
      </div>
    <% end %>
  </div>
</div>