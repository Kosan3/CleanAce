<div class="row">
  <div class="col-8">
    <div class="table-form">
      <table>
        <tbody>
          <tr>
            <td>名前</td>
            <th><%= @user.full_name %></th>
          </tr>
          <tr>
            <td>フリガナ</td>
            <th><%= @user.kana_full_name %></th>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <th><%= @user.email %></th>
          </tr>
          <tr>
            <td>郵便番号</td>
            <th><%= @user.postal_code.first(3) + '-' + @user.postal_code.last(4) %></th>
          </tr>
          <tr>
            <td>住所</td>
            <th><%= @user.address %></th>
          </tr>
          <tr>
            <td>電話番号</td>
            <th><%= @user.phone_number_break %></th>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>