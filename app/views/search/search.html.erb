<div class="row">
  <%= render 'shared/side' %>

  <div class="col-9 search">
    <p class="search-title">商品一覧</p>
    <div class="sort"><%= sort_link @q, :type_name, '商品名', {}, id: 'sort-link' %></div>
    <div class="search-index">
      <ul>
        <% @products.each do |product| %>
          <li class="marging">
            <%= link_to product_path(product) do %>
              <div class="image"><%= attachment_image_tag product, :image, style: "width: 100%; height: 100%;" %></div>
              <p class="image-title"><%= product.introduction %></p>
            <% end %>
          </li>
        <% end %>
      </ul>
  </div>
</div>